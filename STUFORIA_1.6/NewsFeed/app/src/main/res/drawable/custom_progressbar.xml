<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#f7f4f3"
                android:centerColor="#f7f4f3"
                android:centerY="1.0"
                android:endColor="#f7f4f3"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#c9cbcc"
                    android:centerColor="#c9cbcc"
                    android:centerY="1.0"
                    android:endColor="#c9cbcc"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>