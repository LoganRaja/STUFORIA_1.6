<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3.5"
    android:padding="@dimen/padding">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <com.compunet.stuforia.JustifiedTextView
            xmlns:noghteh="http://noghteh.ir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="0dp"
            noghteh:text="There are various stages that one requires to prepare, produce and submit the document to University for an application process, Embassy/Consulate for VISA processing etc.,\n\nWe have templates available for you to download."
            noghteh:textColor="#515151"
            noghteh:textSize="@dimen/text_smaller"
            />
        </ScrollView>
</LinearLayout>

    <com.compunet.stuforia.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="10dp"
        android:splitMotionEvents="true"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/templatespager"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_width="match_parent"
        ></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <ImageView android:id="@+id/indicator1"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:radius="@dimen/text_tiny"
                android:background="@drawable/carousel"
                />
            <View android:id="@+id/indicator11"
                android:layout_width="@dimen/text_smaller"
                android:layout_height="@dimen/text_smaller"
                android:radius="@dimen/text_smaller"
                android:visibility="invisible"
                android:background="@drawable/carousel"
                />
            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:radius="@dimen/text_tiny"
                android:background="@drawable/carousel_deselected"
                />
            <View android:id="@+id/indicator12"
                android:layout_width="@dimen/text_smaller"
                android:layout_height="@dimen/text_smaller"
                android:radius="@dimen/text_smaller"
                android:visibility="invisible"
                android:background="@drawable/carousel"
                />
            <ImageView
                android:id="@+id/indicator3"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:radius="@dimen/text_tiny"
                android:background="@drawable/carousel_deselected"
                />
            <View android:id="@+id/indicator14"
                android:layout_width="@dimen/text_smaller"
                android:layout_height="@dimen/text_smaller"
                android:radius="@dimen/text_smaller"
                android:visibility="invisible"
                android:background="@drawable/carousel"
                />
            <ImageView
                android:id="@+id/indicator4"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:radius="@dimen/text_tiny"
                android:background="@drawable/carousel_deselected"
                /><View android:id="@+id/indicator15"
            android:layout_width="@dimen/text_smaller"
            android:layout_height="@dimen/text_smaller"
            android:radius="@dimen/text_smaller"
            android:visibility="invisible"
            android:background="@drawable/carousel"
            />
            <ImageView
                android:id="@+id/indicator5"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:radius="@dimen/text_tiny"
                android:background="@drawable/carousel_deselected"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>