<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/r1"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="10"
                            >

                           <!-- <com.compunet.stuforia.JustifiedTextView
                                xmlns:noghteh="http://noghteh.ir"
                                android:id="@+id/txt"
                                noghteh:textSize="@dimen/text_smaller"
                                noghteh:textColor="@color/text_Black"
                                android:paddingRight="4dp"
                                android:layout_marginBottom="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                noghteh:text="LOR's is very important to determine a student's chances of getting into a USA University. It is advisable to obtain at least 3 LOR's from Dean or HOD from where the student did his previous education or from present / previous employers."/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin"
                                android:textSize="@dimen/margin"/>-->

                            <com.compunet.stuforia.JustifiedTextView
                                xmlns:noghteh="http://noghteh.ir"
                                noghteh:textSize="@dimen/text_smaller"
                                noghteh:textColor="@color/text_Black"
                                android:paddingRight="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                noghteh:text="LOR's is very important to determine a student's chances of getting into a USA University. It is advisable to obtain at least 3 LOR's from dean or HOD from where the student did his previous education or from present / previous employers.\n\nMost of the Universities require at least 3 LORs from the student.\n\nLORs should be obtained from the professors of the College / University where the student did his UG or previous degree, it could be obtained from the Dean or HOD. Please see that you get it from Professors and not from Lecturers.\n\nSome Universities have a standard format, and it should be in a sealed cover with the seal of the Professor and College.\n\nHowever most of the Universities accept the LOR as per the format of the Professors.It should be on the letter head with seal which is very important. Students with work experience can also obtain LOR from their employers or can submit a combination of LORs from professors and employers."/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:gravity="center"
            android:visibility="visible"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >


            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="2dp"
                android:radius="12dp"
                android:background="@drawable/carousel_deselected" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="2dp"
                android:radius="12dp"
                android:background="@drawable/carousel_deselected" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="2dp"
                android:radius="12dp"
                android:background="@drawable/carousel_deselected" />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="2dp"
                android:background="@drawable/carousel"
                />
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="2dp"
                android:radius="12dp"
                android:background="@drawable/carousel_deselected" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>