<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.compunet.stuforia.JustifiedTextView
            xmlns:noghteh="http://noghteh.ir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="0dp"
            noghteh:textSize="@dimen/text_smaller"
            noghteh:text="Our aim is to mentor, monitor and motivate students to apply themselves in each and every-phase of overseas education.\n\nHowever, due to various reason and unavoidable circumstances if you are banking on us to get assured admits to American Institution based on your credentials.\n"
            noghteh:textColor="#515151"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/rectangle_border_red"
            android:textSize="@dimen/text_small"
            android:text="Update details"
            android:textColor="@color/white"
            android:id="@+id/update_details"
            />
</LinearLayout>
    </LinearLayout>
</LinearLayout>
