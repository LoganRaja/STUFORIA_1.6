<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/red"
            android:text="Email or Phone number already exist"
            android:visibility="gone"
            android:textSize="@dimen/text_small"
            android:id="@+id/duplicateUser"
            />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical"
       android:layout_weight="9">
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fillViewport="true">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginBottom="@dimen/margin"
               android:padding="@dimen/padding">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="16dp">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="2"
                  />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="8"
                   android:text="Full Name"
                   android:textSize="@dimen/text_small"
                   />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:src="@drawable/ic_person_white_18dp"
                       android:paddingBottom="@dimen/padding"
                       android:scaleType="fitStart"/>
                   <EditText
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:textSize="@dimen/text_small"
                       android:id="@+id/fullnameInput_signUp"
                       android:inputType="textPersonName"
                       android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGKHIJKLMNOPQRSTUVWXYZ"
                       />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="16dp">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:text="Email ID"
                       android:textSize="@dimen/text_small"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:src="@drawable/ic_mail_white_18dp"
                       android:paddingBottom="@dimen/padding"
                       android:scaleType="fitStart"/>
                   <EditText
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:textSize="@dimen/text_small"
                       android:id="@+id/emailInput_signUp"
                       android:inputType="textEmailAddress"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="16dp">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:text="Phone No"
                       android:textSize="@dimen/text_small"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:src="@drawable/ic_phone_iphone_white_18dp"
                       android:paddingBottom="@dimen/padding"
                       android:scaleType="fitStart"/>
                   <EditText
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:textSize="@dimen/text_small"
                       android:inputType="number"
                       android:id="@+id/phoneInput_signUp"
                       />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="16dp">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:text="Password"
                       android:textSize="@dimen/text_small"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:src="@drawable/ic_https_white_18dp"
                       android:paddingBottom="@dimen/padding"
                       android:scaleType="fitStart"/>
                   <EditText
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:textSize="@dimen/text_small"
                       android:id="@+id/passwordInput_SignUp"
                       android:inputType="textPassword"
                       />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="16dp">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:text="Confirm Password"
                       android:textSize="@dimen/text_small"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="2"
                       android:src="@drawable/ic_https_white_18dp"
                       android:paddingBottom="@dimen/padding"
                       android:scaleType="fitStart"/>
                   <EditText
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="8"
                       android:textSize="@dimen/text_small"
                       android:inputType="textPassword"
                       android:id="@+id/cnfPassInput_signUp"/>

               </LinearLayout>
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:textSize="@dimen/text_small"
                   android:text="Sign up"
                   android:textAllCaps="false"
                   android:layout_marginTop="@dimen/margin"
                   android:background="@drawable/rectangle_border_red"
                   android:id="@+id/signUpBtn_signUp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="\nBy creating an account, you agree to Stuforia's"
                   android:textSize="@dimen/text_small"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/terms"
                       android:textColor="@color/primary"
                       android:textSize="@dimen/text_small"
                       android:id="@+id/terms"
                       />
                   <TextView
                       android:layout_width="wrap_content"

                       android:layout_height="wrap_content"
                       android:text=", "
                       android:textSize="@dimen/text_small"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/privacy"
                       android:textSize="@dimen/text_small"
                       android:textColor="@color/primary"
                       android:id="@+id/privacy_policy"
                       />
               </LinearLayout>

           </LinearLayout>
       </ScrollView>
   </LinearLayout>

</LinearLayout>



