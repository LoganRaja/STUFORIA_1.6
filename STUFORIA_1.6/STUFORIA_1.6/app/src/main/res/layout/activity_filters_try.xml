<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#ececec"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        >
         <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard Time Zone"
                    android:textColor="#2d5da7"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/margin"
                    />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="@dimen/padding"
              >
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="4"
                   android:textSize="@dimen/text_small"
                   android:text="Alaska "
                   android:gravity="center"
                   android:background="@color/white"/>
               <CheckBox
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@color/white"
                   android:id="@+id/check1"
                   android:layout_marginRight="@dimen/margin"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="4"
                   android:textSize="@dimen/text_small"
                   android:text="Central"
                   android:gravity="center"
                   android:background="@color/white"/>
               <CheckBox
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:id="@+id/check2"
                   android:background="@color/white"
                  />
           </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="@dimen/text_small"
                android:text="Eastern"
                android:gravity="center"
                android:background="@color/white"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/check3"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="@dimen/text_small"
                android:text="Mountain"
                android:gravity="center"
                android:background="@color/white"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/check4"
                android:background="@color/white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="@dimen/text_small"
                android:text="Pacific"
                android:gravity="center"
                android:background="@color/white"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/check5"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="@dimen/text_small"
                android:text="Hawaii"
                android:gravity="center"
                android:background="@color/white"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/check6"
                android:background="@color/white"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:background="#ececec"
                android:paddingTop="@dimen/padding"
                >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MBA / MS"
                            android:textSize="@dimen/text_small"
                            android:textColor="#2d5da7"
                            />

                    <Spinner
                        android:gravity="center"
                        android:paddingTop="@dimen/padding"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:id="@+id/Spinner01"
                        android:spinnerMode="dialog"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:background="#ececec"
                android:paddingTop="@dimen/padding"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:textSize="@dimen/text_small"
                    android:textColor="#2d5da7"
                    />

                <Spinner
                    android:gravity="center"
                    android:paddingTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/Spinner02"
                    android:spinnerMode="dialog"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:background="#ececec"
                android:paddingTop="@dimen/padding"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="@dimen/text_small"
                    android:textColor="#2d5da7"
                    />

                <Spinner
                    android:gravity="center"
                    android:paddingTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:id="@+id/state"
                    android:spinnerMode="dialog"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:background="#ececec"
                android:paddingTop="@dimen/padding"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="@dimen/text_small"
                    android:textColor="#2d5da7"
                    />

                <Spinner
                    android:id="@+id/city"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:spinnerMode="dialog"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="GRE"
            android:textColor="#2d5da7"
            android:textSize="@dimen/text_small"
            android:layout_marginRight="@dimen/margin"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="GMAT"
            android:textColor="#2d5da7"
            android:textSize="@dimen/text_small"
            android:layout_marginRight="@dimen/margin"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:digits="1234567890"
            android:id="@+id/gre_score"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/margin"
            android:paddingLeft="@dimen/padding"
            android:layout_marginRight="@dimen/margin"
            />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/gmat"
                android:layout_weight="1"
                android:digits="1234567890"
                android:textSize="@dimen/text_small"
                android:layout_marginTop="@dimen/margin"
                android:paddingLeft="@dimen/padding"
                android:layout_marginRight="@dimen/margin"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TOEFL"
                android:textColor="#2d5da7"
                android:textSize="@dimen/text_small"
                android:layout_marginRight="@dimen/margin"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="IELTS"
                android:textColor="#2d5da7"
                android:textSize="@dimen/text_small"
                android:layout_marginRight="@dimen/margin"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/toefl_cb"
                android:digits="1234567890"
                android:textSize="@dimen/text_small"
                android:layout_marginTop="@dimen/margin"
                android:paddingLeft="@dimen/padding"
                android:layout_marginRight="@dimen/margin"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ielts"
                android:textSize="@dimen/text_small"
                android:digits="1234567890"
                android:layout_marginTop="@dimen/margin"
                android:paddingLeft="@dimen/padding"
                android:layout_marginRight="@dimen/margin"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTE"
            android:textColor="#2d5da7"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_small"
                android:id="@+id/pte"
                android:digits="1234567890"
                android:layout_marginTop="@dimen/margin"
                android:paddingLeft="@dimen/padding"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/margin"
                android:paddingLeft="@dimen/padding"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fees Range"
            android:textColor="#2d5da7"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/margin"
            />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/text_small"
        android:text="From"
        android:gravity="center_vertical|right"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/text_small"
        android:text="$"
        android:gravity="center|right"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/text_small"
        android:text="10000"
        android:id="@+id/fromFeesVal"
        android:gravity="center_vertical|start"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/text_small"
        android:text="To"
        android:gravity="center_vertical|right"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/text_small"
        android:text="$"
        android:gravity="center|right"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/text_small"
        android:text="50000"
        android:id="@+id/toFeesVal"
        android:gravity="center_vertical|start"
       />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rangeseekbar"
            android:layout_marginTop="@dimen/margin"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/margin"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin"
            android:background="#ececec"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proximity"
                    android:gravity="center|start"
                    android:layout_weight="6"
                    android:textSize="@dimen/text_small"
                    android:textColor="#2d5da7"
                    />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textOff="Off"
                    android:textOn="On"
                    android:textSize="@dimen/text_small"
                    android:background="@drawable/rectangle_border_blue"
                    android:id="@+id/proximity"
                    />

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proximity is a special feature of this App, which list outs Universities around the selected region of radius 300 miles."
                android:textSize="@dimen/text_smaller"
                android:layout_marginTop="@dimen/padding"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/padding"
            ></LinearLayout>




                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/search"
                    android:layout_gravity="center"
                    android:text="Search"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_small"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rectangle_border_red"
                    />

    </LinearLayout>

</ScrollView>