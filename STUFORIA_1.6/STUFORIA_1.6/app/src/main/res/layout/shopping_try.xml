
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/grey">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_information"
                    />
            </LinearLayout>
            <com.compunet.stuforia.JustifiedTextView
                xmlns:noghteh="http://noghteh.ir"
                android:layout_width="0dp"
                android:layout_gravity="top"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_marginTop="@dimen/margin"
                android:lineSpacingExtra="3dp"
                android:paddingRight="@dimen/padding"
                noghteh:text="Get Precautionary clothing for climatic changes with respect to your university location."
                noghteh:textColor="#FFFFFF"
                noghteh:textSize="@dimen/text_smaller"
                />
        </LinearLayout>

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding">
        <TextView
            android:textColor="@color/text_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:text="Premium leather jackets"
            android:textStyle="bold"
            android:textSize="@dimen/text_small" />

        <com.compunet.stuforia.JustifiedTextView
            xmlns:noghteh="http://noghteh.ir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="0dp"
            noghteh:textSize="@dimen/text_smaller"
            noghteh:text="People use leather to make various goods including clothing."
            noghteh:textColor="@color/text_Black"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Winter jackets"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"
            android:layout_marginBottom="@dimen/margin"
            android:textColor="@color/text_Black"
            android:layout_marginTop="@dimen/margin" />
        <com.compunet.stuforia.JustifiedTextView
            xmlns:noghteh="http://noghteh.ir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="0dp"
            noghteh:text="A jacket is a mid stomach length garment for the upper body."
            noghteh:textColor="@color/text_Black"
            noghteh:textSize="@dimen/text_smaller"
            android:paddingRight="4dp" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="US standard groceries"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"
            android:layout_marginBottom="@dimen/margin"
            android:textColor="@color/text_Black"
            android:layout_marginTop="@dimen/margin" />

        <com.compunet.stuforia.JustifiedTextView
            xmlns:noghteh="http://noghteh.ir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="0dp"
            noghteh:text="A grocery store is a retail store that primarily sells food. A grocer is a bulk seller of food."
            noghteh:textColor="@color/text_Black"
            noghteh:textSize="@dimen/text_smaller"
            android:paddingRight="4dp" />
</LinearLayout>

    </LinearLayout>

</ScrollView>
