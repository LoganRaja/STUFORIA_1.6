<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/customborder"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="@dimen/text_small"
            android:text="Passport and F-1 VISA of student copy of from I-20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_smaller"
                    android:background="@drawable/ic_university"
                    />
            </LinearLayout>
            <com.compunet.stuforia.JustifiedTextView
                xmlns:noghteh="http://noghteh.ir"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                noghteh:layout_marginBottom="0dp"
                noghteh:text="Universities issues Form I-20, certificates of eligibility for Non immigrant (F-1) Student status."
                noghteh:textColor="#515151"
                noghteh:textSize="@dimen/text_smaller"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="@dimen/text_small"
            android:text="Letter from University"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_smaller"
                    android:background="@drawable/ic_university"
                    />
            </LinearLayout>
            <com.compunet.stuforia.JustifiedTextView
                xmlns:noghteh="http://noghteh.ir"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                android:layout_marginBottom="0dp"
                noghteh:text="Letter from University mentioning about the graduation ceremony event including date, time and venue."
                noghteh:textColor="#515151"
                noghteh:textSize="@dimen/text_smaller"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="@dimen/text_small"
            android:text="NOC from University"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_smaller"
                    android:background="@drawable/ic_university"
                    />
            </LinearLayout>
            <com.compunet.stuforia.JustifiedTextView
                xmlns:noghteh="http://noghteh.ir"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                noghteh:layout_marginBottom="0dp"
                noghteh:text="Non Objection Certificate(NOC) regarding invitation to parents/family members mentioning their names."
                noghteh:textColor="#515151"
                noghteh:textSize="@dimen/text_smaller"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="@dimen/text_small"
            android:text="Accommodation proof"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_smaller"
                    android:background="@drawable/ic_university"
                    />
            </LinearLayout>
            <com.compunet.stuforia.JustifiedTextView
                xmlns:noghteh="http://noghteh.ir"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:paddingRight="4dp"
                noghteh:layout_marginBottom="0dp"
                android:layout_height="match_parent"
                noghteh:text="Address proof certificates to verify the current residential location."
                noghteh:textColor="#515151"
                noghteh:textSize="@dimen/text_smaller"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border_red"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/close"
            android:layout_marginTop="@dimen/margin"
            android:text="Ok"/>

    </LinearLayout>

</ScrollView>